{
  "compilerOptions": {
    "target": "ES2016",

    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@database/*": ["database/*"],
      "@usuario/*": ["modules/usuario/*"],
      "@video/*": ["modules/video/*"],
      "@artigo/*": ["modules/artigo/*"],
      "@podcast/*": ["modules/podcast/*"],
      "@comentario-no-video/*": ["modules/comentario-no-video/*"],
      "@comentario-no-artigo/*": ["modules/comentario-no-artigo/*"],
      "@comentario-no-podcast/*": ["modules/comentario-no-podcast/*"]
    },
    "outDir": "./build",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
